<%- include ("partials/header.ejs"); %>

<form action="/login" method="POST">

    <div class="row justify-content-center">
        <div class="card shadow-sm" style="min-width: 50%;">
            <div class="card-body">
                <img class="mb-4" style="display: block; margin-left: auto; margin-right: auto;" width="72" height="72"
                     src="https://emojipedia-us.s3.dualstack.us-west-1.amazonaws.com/thumbs/120/google/241/person-bouncing-ball_26f9.png">
                <h5 class="card-title text-center">Sign In / <a href="/signup" style="color: #6c757d;">Sign Up</a></h5>

                <div class="form-group">
                    <label>Username</label>
                    <input required type="text" class="form-control" name="username">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input required type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-success">Sign In</button>
            </div>
        </div>
    </div>

</form>

<br>

<% if (locals.error_msg) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error:</strong> <%= error_msg %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<% } %>

<%- include ("partials/footer.ejs"); %>